<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HOME_status_Fragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/R1"
        android:background="@drawable/background_object"
        >

        <RelativeLayout
            android:id="@+id/R2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="50sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50sp"
            android:elevation="20dp"
            >
            <com.github.mikephil.charting.charts.PieChart
                android:layout_centerHorizontal="true"
                android:id="@+id/chart"
                android:innerRadius="100dp"
                android:layout_width="250dp"
                android:layout_height="250dp"
                ></com.github.mikephil.charting.charts.PieChart>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/tt"
            android:layout_below="@id/R2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#b3b3b3"
            android:layout_margin="20dp"
            />



        /////////////////
        <RelativeLayout
            android:gravity="left"
            android:layout_marginTop="40sp"
            android:id="@+id/HEAD_TDEE"
            android:layout_below="@id/R2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            >
            <LinearLayout
                android:id="@+id/Li_TDEE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/TV_text_TH_TDEE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ค่าปริมาณที่ใช้เเต่ละวัน"
                    android:textColor="#000"
                    android:textSize="12dp"
                    ></TextView>


                <TextView
                    android:id="@+id/TV_text_ENG_TDEE"
                    android:layout_below="@id/TV_text_TH_TDEE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(TDEE)"
                    android:textColor="#a6a6a6"
                    android:textSize="10dp"
                    ></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/Li_TDEE"
                android:orientation="horizontal"
                android:layout_marginLeft="40dp"
                >
                <TextView
                    android:id="@+id/numTDEE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_weight="1"
                    android:textColor="#000"
                    android:gravity="center_horizontal"
                    android:textSize="20dp"
                    ></TextView>
                <TextView
                    android:id="@+id/ss"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="kcal"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:textColor="#000"
                    android:textSize="20dp"
                    ></TextView>
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:gravity="left"
            android:layout_marginTop="10sp"
            android:id="@+id/HEAD_BMR"
            android:layout_below="@id/HEAD_TDEE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            >
            <LinearLayout
                android:id="@+id/Li_BMR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/TV_text_TH_BMR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ค่าปริมาณพลังงานพื้นฐาน"
                    android:textColor="#000"
                    android:textSize="12dp"
                    ></TextView>


                <TextView
                    android:id="@+id/TV_text_ENG_BMR"
                    android:layout_below="@id/TV_text_TH_TDEE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(BMR)"
                    android:textColor="#a6a6a6"
                    android:textSize="10dp"
                    ></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/Li_BMR"
                android:orientation="horizontal"
                android:layout_marginLeft="26dp"
                >
                <TextView
                    android:id="@+id/numBMR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_weight="1"
                    android:textColor="#000"
                    android:gravity="center_horizontal"
                    android:textSize="20dp"
                    ></TextView>
                <TextView
                    android:id="@+id/ssa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="kcal"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:textColor="#000"
                    android:textSize="20dp"
                    ></TextView>
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:gravity="left"
            android:layout_marginTop="10sp"
            android:id="@+id/HEAD_BMI"
            android:layout_below="@id/HEAD_BMR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            >
            <LinearLayout
                android:id="@+id/Li_BMI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/TV_text_TH_BMI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ค่าดัชนีมวลกาย "
                    android:textColor="#000"
                    android:textSize="12dp"
                    ></TextView>


                <TextView
                    android:id="@+id/TV_text_ENG_BMI"
                    android:layout_below="@id/TV_text_TH_TDEE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(BMI)"
                    android:textColor="#a6a6a6"
                    android:textSize="10dp"
                    ></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/Li_BMI"
                android:orientation="horizontal"
                android:layout_marginLeft="74dp"

                >
                <TextView
                    android:id="@+id/numBMI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_weight="1"
                    android:textColor="#000"
                    android:gravity="center_horizontal"
                    android:textSize="20dp"
                    ></TextView>
                <TextView
                    android:id="@+id/sssa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="       "
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    ></TextView>
            </LinearLayout>

        </RelativeLayout>

