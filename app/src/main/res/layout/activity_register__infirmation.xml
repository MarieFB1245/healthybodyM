<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register_Infirmation"
    android:background="#262626">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        >
        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textSize="30dp"
            android:textColor="#ffffff"
            ></TextView>
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="50sp"
        android:id="@+id/namelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <EditText
            android:layout_weight="1"
            android:paddingLeft="15dp"
            android:id="@+id/inputfirstname"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_width="match_parent"
            android:hint="firstname"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:backgroundTint="#ffffff"
            android:layout_height="40sp"
            ></EditText>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutage"
        android:layout_below="@+id/namelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30sp"
        >

        <EditText
            android:id="@+id/inputLastname"
            android:layout_weight="1"
            android:paddingLeft="15dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:hint="Lastname"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:backgroundTint="#ffffff"
           ></EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutweight"
        android:layout_below="@+id/layoutage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30sp"
        >





        <EditText
            android:id="@+id/inputweight"
            android:layout_weight="1"
            android:paddingLeft="15dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:hint="Weight"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:backgroundTint="#ffffff"
            android:inputType="number"
           ></EditText>

        <EditText
            android:id="@+id/inputheight"
            android:layout_weight="1"
            android:paddingLeft="15dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:hint="Height"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:backgroundTint="#ffffff"
            android:inputType="number"
            ></EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutheight"
        android:layout_below="@+id/layoutweight"
        android:layout_width="match_parent"
        android:layout_height="45sp"
        android:layout_marginTop="30sp"
        >
        <EditText
            android:id="@+id/inputage"
            android:paddingLeft="15dp"
            android:layout_weight="1"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:hint="Age"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:backgroundTint="#ffffff"
            android:inputType="numberDecimal|numberSigned"
            ></EditText>

        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
            android:id="@+id/spinner_gender"
            android:layout_width="match_parent"
            android:background="@drawable/edit_text"
            android:paddingLeft="15dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Gender"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_alignParentStart="true"
            app:met_primaryColor="#ffffff"
            app:met_textColor="#ffffff"
            app:met_textColorHint="#ffffff"
            app:met_baseColor="#ffffff"

            ></com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/layoutgender"
        android:layout_below="@+id/layoutheight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30sp"
        >

    </LinearLayout>

    <LinearLayout
        android:id="@+id/textlayoutlevelworkout"
        android:layout_below="@+id/layoutgender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >



    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutlevelworkout"
        android:layout_below="@+id/textlayoutlevelworkout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

<com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
    android:id="@+id/android_material_desgn_spinner"
    android:paddingLeft="15dp"
    app:met_primaryColor="#ffffff"
    app:met_textColor="#ffffff"
    app:met_textColorHint="#ffffff"
    app:met_baseColor="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="40sp"
    android:hint="Levelwork out"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    android:layout_alignParentStart="true"
    ></com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner>

    </LinearLayout>

    <Button
        android:layout_marginTop="30sp"
        android:id="@+id/registerbutton"
        android:text="Register"
        android:textColor="#ffffff"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_below="@id/layoutlevelworkout"
        android:background="@drawable/button_login_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </Button>


</RelativeLayout>