<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register_User"
    android:background="@drawable/backcolor">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/H1"
            android:textSize="30dp"
            android:text="Register"></TextView>

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/H1"
            android:layout_marginTop="40dp"
            android:text="Username"></TextView>

        <EditText
            android:layout_width="266dp"
            android:id="@+id/e1"
            android:layout_height="wrap_content"
            android:layout_below="@id/H1"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="150sp"
            android:layout_marginTop="20dp"></EditText>
        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text1"
            android:layout_marginTop="40dp"
            android:text="Password"></TextView>

        <EditText
            android:id="@+id/e2"
            android:layout_width="266dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/e1"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="150sp"
            android:layout_marginTop="20dp"></EditText>

        <TextView
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text2"
            android:layout_marginTop="40dp"
            android:text="ConPassword"></TextView>

        <EditText
            android:id="@+id/e3"
            android:layout_width="266dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/e2"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="150sp"
            android:layout_marginTop="20dp"></EditText>

        <Button
            android:layout_width="600px"
            android:layout_marginTop="300px"
            android:text="Next"
            android:layout_height="wrap_content"
            android:id="@+id/button1"
            android:layout_below="@id/e3"
            android:layout_centerHorizontal="true"
            ></Button>
    </RelativeLayout>


</RelativeLayout>