<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home_User"
    android:id="@+id/home_user"
    android:background="@drawable/bacckground_color"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/R1"
    >
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/bottomop"
    android:text="option"
    ></Button>
</RelativeLayout>

    <RelativeLayout
        android:id="@+id/R2"
        android:layout_below="@id/R1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <com.github.mikephil.charting.charts.PieChart
        android:layout_centerHorizontal="true"
        android:id="@+id/chart"
        android:innerRadius="100dp"
        android:layout_width="250dp"
        android:layout_height="250dp"
        ></com.github.mikephil.charting.charts.PieChart>
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="40sp"
        android:id="@+id/R3"
        android:layout_below="@id/R2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:orientation="horizontal"
        >
    <TextView
        android:id="@+id/numberBMI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:textSize="25sp"></TextView>

    <TextView
        android:id="@+id/numberBMR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:gravity="center_horizontal"
        android:layout_weight="1"
        android:textSize="25sp"></TextView>

    <TextView
        android:id="@+id/numberTDEE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:gravity="center_horizontal"
        android:layout_weight="1"
        android:textSize="25sp"></TextView>
    <TextView
        android:id="@+id/numberTargete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:textSize="25sp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/R4"
        android:layout_width="match_parent"
        android:layout_below="@id/R3"
        android:weightSum="4"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <TextView
            android:id="@+id/textBMI"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="BMI"
            android:textSize="25sp"></TextView>

        <TextView
            android:id="@+id/textBMR"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="BMR"
            android:textSize="25sp"></TextView>


    <TextView
        android:id="@+id/textTDEE"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="TDEE"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:textSize="25sp"></TextView>

    <TextView
        android:id="@+id/texttarget"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="Target"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:textSize="25sp"></TextView>

    </LinearLayout>



    <RelativeLayout
        android:id="@+id/R5"
        android:layout_width="match_parent"
        android:layout_below="@id/R4"
        android:layout_height="wrap_content"
        >
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addfood"
        android:text="AddFood"
        android:layout_marginTop="30sp"
        ></Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addworkout"
        android:text="addworkout"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30sp"
        ></Button>
    </RelativeLayout>
</RelativeLayout>